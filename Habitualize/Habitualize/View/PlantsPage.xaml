<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitualize.View.PlantsPage"
             Title="PlantsPage">
    <StackLayout Padding="20">
        <Label Text="You plants list!" Style="{StaticResource HabitsLabelStyle}"/>
        <Label Text="Plants List:" Style="{StaticResource HabitsLabelStyle}" />
        <ListView x:Name="HabitListView" ItemTapped="OnItemTapped" Style="{StaticResource HabitsListViewStyle}" IsEnabled="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding HabitName}" Style="{StaticResource HabitsListViewLabelStyle}"/>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Habit" Clicked="OnCreatePlantHabitButtonClicked" Style="{StaticResource HabitsButtonStyle}"/>
        <Button Text="Back" Clicked="OnBackButtonClicked" Style="{StaticResource HabitsButtonStyle}" />
    </StackLayout>
</ContentPage>