<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitualize.View.PlantsPage"
             Title="PlantsPage">
    <StackLayout Padding="20">
        <Label Text="Plants List:" FontSize="24" />
        <ListView x:Name="HabitListView">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <TextCell Text="{Binding HabitName}" Detail="{Binding HabitDescription}" />
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="Add Habit" Clicked="OnCreatePlantHabitButtonClicked"/>
        <Button Text="Back" Clicked="OnBackButtonClicked" />
    </StackLayout>
</ContentPage>