<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"  
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"  
            x:Class="Habitualize.View.AppProfile"  
            xmlns:local="clr-namespace:Habitualize.Services">  
   <ContentView.Resources>  
       <ResourceDictionary>  
           <local:Base64ToImageSourceConverter x:Key="Base64ToImageSourceConverter" />  
       </ResourceDictionary>  
   </ContentView.Resources>  
   <ScrollView VerticalScrollBarVisibility="Never"   
               HorizontalScrollBarVisibility="Never">  
       <StackLayout Padding="20">  
           <Border Grid.Row="0"   
                   Style="{StaticResource ProfileStyleSqr}">  
               <Grid ColumnDefinitions="*,Auto"   
                     VerticalOptions="Center">  
                   <!-- Text -->  
                   <Label Grid.Column="0"  
                          HorizontalOptions="Start"   
                          VerticalOptions="Center"   
                          LineHeight="1">  
                       <Label.FormattedText>  
                           <FormattedString>  
                               <Span Text="Hi, "   
                                     TextColor="White"   
                                     FontAttributes="Bold"   
                                     FontSize="28"/>  
                               <Span Text="{Binding Username,   
                                           StringFormat='{0}!'}"   
                                     TextColor="White"   
                                     FontAttributes="Bold"  
                                     FontSize="28"/>  
                               <Span Text="&#x0a;"/>  
                               <Span Text="&#x0a;"/>  
                               <Span Text="What are you doing next?"   
                                     TextColor="White"   
                                     FontAttributes="Bold"  
                                     FontSize="16"/>     
                           </FormattedString>  
                       </Label.FormattedText>  
                   </Label>  
                   <!-- Image -->  
                   <Image Grid.Column="1"  
                          x:Name="AvatarImage"  
                          Source="{Binding AvatarImageSource}"   
                          Aspect="AspectFill"  
                          HeightRequest="100"  
                          WidthRequest="100"  
                          HorizontalOptions="End">  
                       <Image.GestureRecognizers>  
                           <TapGestureRecognizer Tapped="OnAvatarTapped" />  
                       </Image.GestureRecognizers>  
                   </Image>  
               </Grid>  
           </Border>  
           <!-- Short bio -->  
           <Editor Style="{StaticResource ProfileEditorStyle}"  
           x:Name="BioEditor"  
           Text="{Binding Bio}"  
           Focused="OnBioEditorFocused"  
           Unfocused="OnBioEditorUnfocused"  
           TextChanged="OnBioTextChanged"/>
            <Grid ColumnDefinitions="*,Auto" Margin="0,20,0,10">
                <!-- "Achievements" -->
                <Label Text="Achievements"  
                       FontSize="18"  
                       TextColor="Black"  
                       FontAttributes="Bold"  
                       VerticalOptions="Center"  
                       HorizontalOptions="Start" />
                <Label Grid.Column="1"  
                       Text="See All"  
                       FontSize="14"  
                       TextColor="#7950F2"  
                       FontAttributes="Bold"  
                       VerticalOptions="Center"  
                       HorizontalOptions="End">
                    <Label.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnSeeAllAchievementsTapped" />
                    </Label.GestureRecognizers>
                </Label>
            </Grid>
            <Grid ColumnDefinitions="*,Auto" Margin="0,20,0,10">  
               <!-- "Friends" -->  
               <Label Text="Friends"  
                      FontSize="18"  
                      TextColor="Black"  
                      FontAttributes="Bold"  
                      VerticalOptions="Center"  
                      HorizontalOptions="Start" />  
               <Label Grid.Column="1"  
                      Text="See All"  
                      FontSize="14"  
                      TextColor="#7950F2"  
                      FontAttributes="Bold"  
                      VerticalOptions="Center"  
                      HorizontalOptions="End">  
                   <Label.GestureRecognizers>  
                       <TapGestureRecognizer Tapped="OnSeeAllTapped" />  
                   </Label.GestureRecognizers>  
               </Label>  
           </Grid>  
           <!-- Friends list -->  
           <CollectionView ItemsSource="{Binding Friends}"  
                           SelectionMode="None"  
                           VerticalOptions="FillAndExpand">  
               <CollectionView.ItemTemplate>  
                   <DataTemplate>  
                       <Grid Padding="10"   
                             ColumnDefinitions="Auto,*,Auto,Auto"   
                             RowDefinitions="Auto">  
                           <!-- Friend avatar -->
                            <Image Source="{Binding Avatar, Converter={StaticResource Base64ToImageSourceConverter}}"     
                                  HeightRequest="50"  
                                  WidthRequest="50"  
                                  Aspect="AspectFill">
                                <Image.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="OnFriendPhotoTapped"/>
                                </Image.GestureRecognizers>
                            </Image>  
                           <!-- Friend username -->  
                           <Label Grid.Column="1"  
                                  Text="{Binding Name}"  
                                  FontSize="16"  
                                  TextColor="black"  
                                  VerticalOptions="Center"  
                                  Margin="10,0,0,0" />
                           <!-- Delete button -->  
                           <Button
                               Grid.Column="2"
                               Margin="0,0,10,0"
                               WidthRequest="85"
                               Background="Salmon" 
                               FontSize="14"
                               VerticalOptions="Center"
                               Text="Delete"
                               Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=RemoveFriendCommand}"  
                               CommandParameter="{Binding .}" />
                           <!-- Message button -->  
                           <Button Grid.Column="3"  
                                   Text="Message"  
                                   Background="#7950F2"  
                                   TextColor="White"  
                                   WidthRequest="85"
                                   FontSize="14"  
                                   VerticalOptions="Center"  
                                   Command="{Binding MessageCommand}"  
                                   CommandParameter="{Binding .}" />  
                       </Grid>  
                   </DataTemplate>  
               </CollectionView.ItemTemplate>  
           </CollectionView>  
           <!-- Random users list -->  
           <Label Text="Suggested Friends"  
                  FontSize="18"  
                  TextColor="Black"  
                  FontAttributes="Bold"  
                  VerticalOptions="Center"  
                  HorizontalOptions="Start"  
                  Margin="0,20,0,10" />
            <CollectionView ItemsSource="{Binding SuggestedFriends}"  
                            SelectionMode="None"  
                            VerticalOptions="FillAndExpand">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10"   
                              ColumnDefinitions="Auto,*,Auto"   
                              RowDefinitions="Auto">
                            <Image Source="{Binding Avatar, Converter={StaticResource Base64ToImageSourceConverter}}"    
                                   HeightRequest="50"  
                                   WidthRequest="50"  
                                   Aspect="AspectFill">
                            </Image>
                            <Label Grid.Column="1"  
                                   Text="{Binding Name}"  
                                   FontSize="16"  
                                   TextColor="black"  
                                   VerticalOptions="Center"  
                                   Margin="10,0,0,0" />
                            <Button Grid.Column="2"  
                                    Text="Add"  
                                    Background="#7950F2"  
                                    TextColor="White"  
                                    FontSize="14"  
                                    VerticalOptions="Center"  
                                    Command="{Binding Source={RelativeSource AncestorType={x:Type ContentView}}, Path=AddFriendCommand}"  
                                    CommandParameter="{Binding .}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>  
   </ScrollView>  
</ContentView>
