<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitualize.View.AppMap">

    <ScrollView VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
        <StackLayout Padding="20" Spacing="20" >
            <!-- Buttons net -->
            <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto,Auto" 
                  ColumnSpacing="15" 
                  RowSpacing="15">
                <!-- Button "Plants" -->
                <Border Grid.Row="0" Grid.Column="0" 
                        BackgroundColor="#7950F2" 
                        StrokeShape="RoundRectangle 20" 
                        Padding="15">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="🌱" 
                                FontSize="30" 
                                HorizontalOptions="Center" 
                                Margin="0,0,0,5" />
                        <Button Text="Plants" 
                                 TextColor="White"
                                 BackgroundColor="Transparent"
                                 FontAttributes="Bold"
                                 FontSize="20"
                                 Clicked="OnPlantsButtonClicked" />
                    </StackLayout>
                </Border>
                <!-- Button "Sport" -->
                <Border Grid.Row="0" Grid.Column="1" 
                        BackgroundColor="#7950F2" 
                        StrokeShape="RoundRectangle 20" 
                        Padding="15">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="🏋️" 
                               FontSize="30" 
                               HorizontalOptions="Center" 
                               Margin="0,0,0,5" />
                        <Button Text="Sport" 
                                TextColor="White"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                FontSize="20"
                                Clicked="OnSportButtonClicked" />
                    </StackLayout>
                </Border>
                <!-- Button "Books" -->
                <Border Grid.Row="1" Grid.Column="0" 
                        BackgroundColor="#7950F2" 
                        StrokeShape="RoundRectangle 20" 
                        Padding="15">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="📚" 
                               FontSize="30" 
                               HorizontalOptions="Center" 
                               Margin="0,0,0,5" />
                        <Button Text="Books" 
                                TextColor="White"
                                BackgroundColor="Transparent"
                                FontAttributes="Bold"
                                FontSize="20"
                                Clicked="OnBooksButtonClicked" />
                    </StackLayout>
                </Border>
                <!-- Button "Custom Habits" -->
                <Border Grid.Row="1" Grid.Column="1" 
                        BackgroundColor="#7950F2" 
                        StrokeShape="RoundRectangle 20" 
                        Padding="15">
                    <StackLayout HorizontalOptions="Center" VerticalOptions="Center">
                        <Label Text="📝" 
                               FontSize="30" 
                               HorizontalOptions="Center" 
                               Margin="0,0,0,5" />
                        <Button Text="Custom Habits" 
                                TextColor="White"
                                BackgroundColor="Transparent"
                                FontSize="20"
                                FontAttributes="Bold"
                                Clicked="OnCustomHabitsButtonClicked" />
                    </StackLayout>
                </Border>
            </Grid>
            <!-- Additional text -->
            <Label x:Name="AdditionalTextLabel"
                   Text="Choose category to begin!" 
                   FontSize="16" 
                   HorizontalOptions="Center" 
                   TextColor="#666666" 
                   Margin="0,20,0,0" />
            <!-- Level and dailies -->
                <Grid ColumnDefinitions="*,*" 
                  RowDefinitions="Auto,Auto,Auto" 
                  ColumnSpacing="15" 
                  RowSpacing="15">
                <Label Grid.Row="0" 
                       Grid.Column="0" 
                       x:Name="DailiesLabel"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black" />
                <Label Grid.Row="0" 
                       Grid.Column="1" 
                       x:Name="LevelLabel"
                       FontSize="20"
                       FontAttributes="Bold"
                       TextColor="Black" />
                <Border Grid.Column="1"
                        Grid.Row="1"
                        StrokeShape="RoundRectangle 20"
                        BackgroundColor="#F3F0FF"
                        HeightRequest="28"
                        VerticalOptions="Center"
                        Padding="0,1,1,1">
                    <Grid>
                        <!-- Градиентная полоса прогресса -->
                        <BoxView x:Name="ProgressGradient"
                                 CornerRadius="14"
                                 HeightRequest="24"
                                 HorizontalOptions="Start"
                                 VerticalOptions="Center"
                                 WidthRequest="0">
                            <BoxView.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                                    <GradientStop Color="#7950F2" Offset="0.0"/>
                                    <GradientStop Color="#FF6BD6" Offset="1.0"/>
                                </LinearGradientBrush>
                            </BoxView.Background>
                        </BoxView>
                        <!-- Прозрачный ProgressBar для управления прогрессом -->
                        <ProgressBar x:Name="ExperienceProgressBar"
                                     Progress="0"
                                     HeightRequest="24"
                                     ProgressColor="Transparent"
                                     BackgroundColor="Transparent"
                                     VerticalOptions="Center"
                                     HorizontalOptions="FillAndExpand"
                                     Opacity="0.01"/>
                    </Grid>
                </Border>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentView>
