<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitualize.View.AppMap">

    <ScrollView 
            VerticalScrollBarVisibility="Never" 
            HorizontalScrollBarVisibility="Never">
        <StackLayout Padding="20" 
                 Spacing="20">
            <Grid ColumnDefinitions="*,*" 
              RowDefinitions="Auto,Auto,Auto" 
              ColumnSpacing="10" 
              RowSpacing="10">

                <Border Grid.Row="0" 
                    Grid.Column="0" 
                    BackgroundColor="#04cc51" 
                    StrokeShape="RoundRectangle 20" 
                    Padding="20" 
                    Margin="0,10,0,0">
                    <Button Text="Plants" 
                        Style="{StaticResource MainContentButtonStyle}" 
                        Clicked="OnPlantsButtonClicked" />
                </Border>

                <Border Grid.Row="0" 
                    Grid.Column="1" 
                    BackgroundColor="#eb3b3b" 
                    StrokeShape="RoundRectangle 20" 
                    Padding="20" 
                    Margin="0,10,0,0">
                    <Button Text="Sport" 
                        Style="{StaticResource MainContentButtonStyle}" 
                        Clicked="OnSportButtonClicked" />
                </Border>

                <Border Grid.Row="1" 
                    Grid.Column="0" 
                    BackgroundColor="#9c3d02" 
                    StrokeShape="RoundRectangle 20" 
                    Padding="20" 
                    Margin="0,10,0,0">
                    <Button Text="Books" 
                        Style="{StaticResource MainContentButtonStyle}" 
                        Clicked="OnBooksButtonClicked" />
                </Border>
            </Grid>
        </StackLayout>
    </ScrollView>
</ContentView>
