<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Habitualize"
             xmlns:conv="clr-namespace:Habitualize.Services"
             xmlns:view="clr-namespace:Habitualize.View"
             x:Class="Habitualize.App">
    <Application.Resources>
        <ResourceDictionary>
            <local:TabVisibilityConverter x:Key="TabVisibilityConverter" />
            <conv:Base64ToImageSourceConverter x:Key="Base64ToImageSourceConverter" />
            <local:TabImageConverter x:Key="TabImageConverter" />
            <view:BoolToOpacityConverter x:Key="BoolToOpacityConverter"/>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="../Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Application.Resources>
</Application>
