<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Habitualize.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:local="clr-namespace:Habitualize"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <Shell.FlyoutHeader>
        <Label Text="Header" FontSize="20" TextColor="White" HorizontalOptions="Center" />
    </Shell.FlyoutHeader>

    <Shell.FlyoutFooter>
        <Label Text="Footer" FontSize="20" TextColor="White" HorizontalOptions="Center" />
    </Shell.FlyoutFooter>
    
    <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />

</Shell>

