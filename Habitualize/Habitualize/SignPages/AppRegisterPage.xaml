<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Habitualize.SignPages.AppRegisterPage"
             Title="AppRegisterPage"
             BackgroundColor="#121212">
    
    <Grid RowDefinitions="Auto,*,Auto">

        <!-- Header -->
        <Border Grid.Row="0" BackgroundColor="Transparent" Padding="0" StrokeThickness="1" Stroke="Transparent" HorizontalOptions="End">

        </Border>

        <!-- Main Content -->
        <ScrollView Grid.Row="1" VerticalScrollBarVisibility="Never" HorizontalScrollBarVisibility="Never">
            <StackLayout Padding="20" Spacing="20">
                <Grid ColumnDefinitions="20,*,20" RowDefinitions="Auto,Auto,Auto" ColumnSpacing="10" RowSpacing="10">

                    <Border Grid.Row="0" Grid.Column="1" BackgroundColor="#7950F2" StrokeShape="RoundRectangle 20" Padding="20" Margin="0,10,0,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="20,20" Radius="40" Opacity="0.8" />
                        </Border.Shadow>
                        <StackLayout>
                            <Button Text="Go to SignIn" />
                        </StackLayout>
                    </Border>

                    <Border Grid.Row="1" Grid.Column="1" BackgroundColor="#7950F2" StrokeShape="RoundRectangle 20" Padding="20" Margin="0,10,0,0">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="20,20" Radius="40" Opacity="0.8" />
                        </Border.Shadow>
                        <StackLayout>
                            <Button Text="Go to SignUp"/>
                        </StackLayout>
                    </Border>

                </Grid>
            </StackLayout>
        </ScrollView>

        <!-- Footer -->
        <Border Grid.Row="2" BackgroundColor="Transparent" Padding="0" StrokeThickness="1" Stroke="Transparent">
            <Border Grid.Row="2" BackgroundColor="Transparent" Padding="0" StrokeThickness="1" Stroke="Transparent">
                <Border.Shadow>
                    <Shadow Brush="Black" Offset="20,20" Radius="40" Opacity="0.8" />
                </Border.Shadow>
                <Grid ColumnDefinitions="*,*,*,*,*">
                    <ImageButton Source="Resources\Images\avatar.png" Grid.Column="2" Style="{StaticResource ButtonStyle}" />
                </Grid>
            </Border>
        </Border>

    </Grid>
</ContentPage>